<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.angelinaBot.dao.ActivityMapper">

    <resultMap id="BaseResultMap" type="top.angelinaBot.model.ActivityInfo">
        <result column="type" property="type" jdbcType="INTEGER"/>
        <result column="hour" property="hour" jdbcType="VARCHAR"/>
        <result column="count" property="count" jdbcType="BIGINT"/>
    </resultMap>

    <insert id="getGroupMessage">
        insert into a_activity (type) values (0);
    </insert>

    <insert id="getFriendMessage">
        insert into a_activity (type) values (1);
    </insert>

    <insert id="getEventMessage">
        insert into a_activity (type) values (2);
    </insert>

    <insert id="sendMessage">
        insert into a_activity (type) values (3);
    </insert>

    <insert id="initActivityTable">
        CREATE TABLE IF NOT EXISTS `a_activity`  (
        `type` int(255) NOT NULL,
        `time` TIMESTAMP(6) NOT NULL DEFAULT CURRENT_TIMESTAMP
        );
    </insert>

    <delete id="clearActivity">
        delete from a_activity where time &lt; datetime('now','-1 day');
    </delete>

    <select id="selectActivity" resultMap="BaseResultMap">
        SELECT type, HOUR(time) as hour, count(*) as count from a_activity group by type, HOUR(time);
    </select>
</mapper>